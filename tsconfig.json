{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [{ "name": "typescript-styled-plugin", "validate": false }],
    "target": "esnext",
    "paths": {
      "app/*": ["src/assets/scripts/*"],
      "styles/*": ["src/assets/styles/*"]
    }
  },
  "exclude": [".cache/", "coverage/", "node_modules/", "dist/"]
}
