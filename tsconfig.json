{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "paths": {
      "app/*": ["assets/scripts/*"],
      "styles/*": ["assets/styles/*"]
    }
  },
  "exclude": [".cache/", "coverage/", "node_modules/", "dist/"]
}
