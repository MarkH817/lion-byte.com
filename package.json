  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop",
    "format": "prettier --write src/**/*.js && standard --fix",
    "format:less": "prettier --single-quote --write src/**/*.less",
    "test": "standard ."
  },
  "husky": {
    "pre-commit": {
      "*.js": [
        "prettier --write",
        "standard --fix",
        "git add"
      ],
      "*.{md,less}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "graphql"
    ]
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "standard": "^11.0.1"
  }
