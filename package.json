{
  "name": "lion-byte.com",
  "version": "2.0.0",
  "description": "Mark Hernandez's portfolio site",
  "author": "Mark Hernandez <mark@lion-byte.com> (https://www.lion-byte.com)",
  "scripts": {
    "build": "run-s build:* --print-label",
    "build:11ty": "eleventy --quiet",
    "build:webpack": "webpack --config webpack/webpack.prod.js",
    "dev": "run-p dev:* --print-label",
    "dev:11ty": "eleventy --serve",
    "dev:webpack": "webpack --config webpack/webpack.dev.js --watch",
    "format": "npm run prettier && npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|yml|yaml|less|css|ts|md)\"",
    "test": "npm run type && jest",
    "type": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/MarkH817/lion-byte.com.git"
  },
  "keywords": [
    "blog",
    "personal site"
  ],
  "main": "n/a",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@lionbyte/eslint-config": "^1.9.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/cssnano": "^4.0.1",
    "@types/jest": "^27.0.2",
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/node": "^16.10.3",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.2.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.3.0",
    "cssnano": "^5.0.8",
    "date-fns": "^2.25.0",
    "eslint": "^7.32.0",
    "husky": "^4.3.0",
    "jest": "^27.2.4",
    "jest-runner-eslint": "^0.11.1",
    "less": "^4.1.2",
    "less-loader": "^10.0.1",
    "lint-staged": "^11.2.0",
    "mini-css-extract-plugin": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.9",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.4.3",
    "webpack": "^5.58.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "core-js": "^3.18.2",
    "lit": "^2.0.2",
    "modern-normalize": "^1.1.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.25.0",
    "regenerator-runtime": "^0.13.9",
    "typeface-nunito": "1.1.13",
    "typeface-open-sans": "1.1.13"
  }
}
