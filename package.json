{
  "name": "lion-byte.com",
  "version": "2.0.0",
  "description": "Mark Hernandez's portfolio site",
  "author": "Mark Hernandez <mark@lion-byte.com> (https://www.lion-byte.com)",
  "scripts": {
    "build": "run-s build:* --print-label",
    "build:11ty": "eleventy --quiet",
    "build:webpack": "webpack --config webpack/webpack.prod.js",
    "dev": "run-p dev:* --print-label",
    "dev:11ty": "eleventy --serve",
    "dev:webpack": "webpack --config webpack/webpack.dev.js --watch",
    "format": "npm run prettier && npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|yml|yaml|less|css|ts|md)\"",
    "test": "npm run type && jest",
    "type": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/MarkH817/lion-byte.com.git"
  },
  "keywords": [
    "blog",
    "personal site"
  ],
  "main": "n/a",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@lionbyte/eslint-config": "^1.9.0",
    "@testing-library/jest-dom": "^5.13.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/cssnano": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^15.12.2",
    "@types/webpack": "^4.41.22",
    "@types/webpack-bundle-analyzer": "^3.9.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^9.8.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.11",
    "date-fns": "^2.22.1",
    "eslint": "^7.28.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "less": "^4.1.1",
    "less-loader": "^7.0.1",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.1",
    "postcss-loader": "^4.0.1",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "styles-loader": "^3.0.0",
    "typescript": "^4.3.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "core-js": "^3.14.0",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "modern-normalize": "^1.1.0",
    "prism-themes": "^1.7.0",
    "prismjs": "^1.23.0",
